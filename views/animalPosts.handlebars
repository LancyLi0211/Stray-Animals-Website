<main class="container px-4">
    <div class="container">
        {{#if postData}}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {{#each postData}}
            <div class="col mb-2">
                <div class="card h-100 d-flex flex-column" style="width: 18rem;"> <!-- Use h-100 and flex-column here -->
                    <img src="{{animal_photo}}" class="card-img-top" alt="{{species}}" style="object-fit: cover; height: 18rem;">
                    <div class="card-body d-flex flex-column"> <!-- Flex-grow-1 will push the footer down -->
                        <h1 class="card-title">{{animal_name}}</h1>
                        <ul class="list-group list-group-flush flex-grow-1"> <!-- mt-auto will push the list to the bottom -->
                            <li class="list-group-item">Find Time: {{find_time}}</li>
                            <li class="list-group-item">Species: {{species}}</li>
                            <li class="list-group-item">Health Condition: {{health_condition}}</li>
                            <li class="list-group-item">Location: {{location}}</li>
                        </ul>
                        <a href="/animal/detail/{{_id}}" class="list-link card-footer text-center mt-auto">Get Detail</a> <!-- mt-auto here as well -->
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
    </div>
    <hr>
    <div class="container text-center">
        <h2>Fun Fact</h2>
        <p id="catFact"></p>
    </div>
    <hr>
    <script src="../public/js/getRandomFact.js"></script>

</main>

